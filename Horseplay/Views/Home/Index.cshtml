<div class="slideshow-container">
    <div class="mySlides fade">
        <div class="numbertext">1 / 6</div>
        <img src="~/Images/cloud_office_800.png">
        <div class="text">Przenieś swoje biuro do chmury!</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">2 / 6</div>
        <img src="~/Images/team_800.png">
        <div class="text">Zaproś współpracowników i popraw płynność kooperacji</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">3 / 6</div>
        <img src="~/Images/contacts_800.png">
        <div class="text">Zbuduj bazę firm i kontaktów, z którymi współpracujesz</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">4 / 6</div>
        <img src="~/Images/truck_800.png">
        <div class="text">Zoptymalizuj koszty logistyki dzięki lepszej kontroli procesu</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">5 / 6</div>
        <img src="~/Images/finance_800.png">
        <div class="text">Oszczędzaj czas dzięki kompleksowej obsłudze finansów i fakturowania</div>
    </div>

    <div class="mySlides fade">
        <div class="numbertext">6 / 6</div>
        <img src="~/Images/BI_800.png">
        <div class="text">Zwiększ konkurencyjność swojej firmy wykorzystując Business Inteligence!</div>
    </div>

    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
    <span class="dot" onclick="currentSlide(4)"></span>
    <span class="dot" onclick="currentSlide(5)"></span>
    <span class="dot" onclick="currentSlide(6)"></span>
</div>


<div class="button-horizontally">
    <input type="button" value="Zarejestruj się" class="btn btn-default" onclick="location.href='@Url.Action("AddUser","Home")'" />
    <input type="button" value="Zaloguj" class="btn btn-success" onclick="location.href='@Url.Action("Login","Home")'"/>
</div>

<script type="text/javascript">
    var slideIndex = 1;
    var timer;

    showSlides(slideIndex);

    function plusSlides(n) {
        window.clearTimeout(timer);
        showSlides(slideIndex += n);
    }

    function currentSlide(n) {
        window.clearTimeout(timer);
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        if(typeof(n)==='undefined'){
            slideIndex++;
            n=slideIndex;
        }
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) {slideIndex = 1} 
        if (n < 1) {slideIndex = slides.length}
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none"; 
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex-1].style.display = "block"; 
        dots[slideIndex-1].className += " active";
        timer = setTimeout(showSlides, 5000); // Change image every 2 seconds
    }

</script>

